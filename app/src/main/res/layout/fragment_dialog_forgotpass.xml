<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lnForgotPass"
    android:background="@drawable/dialog_border"
    tools:context=".fragments.dialog_forgotpass">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/man_semi"
            android:text="Email Address"
            android:textColor="#545454" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_bg">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/man_semi"
                android:hint="Enter Email Address"
                android:textColorHint="#9E9E9E"
                android:inputType="textNoSuggestions|text"
                android:maxLines="1"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:textSize="13sp"></EditText>

        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:id="@+id/lnPasswordReset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/layout_bg"
                android:backgroundTint="#F67E24"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/man_semi"
                    android:gravity="center"
                    android:text="Send Password Reset"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:id="@+id/lnCancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/layout_bg"
                android:backgroundTint="#FFFFFF"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/man_semi"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#3B3B3D" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>